.chat-main
  .chat-main__header
    .chat-main__header__group
      .groupname
        name
      .username
        member
    .chat-main__header__edit-btn
      = link_to 'Edit', '#' 
  .chat-main__message-list
    .chat-main__message-list__message
      .username
        name
      .date
        2019/12/20
    .post
      HELLO!
  .chat-main__message-form
    .chat-main__message-form__new-message
      .chat-main__message-form__new-message__input-box
        .text
          %input{type: :text, class:"textform"}
        .image
          %label{class:"image"}
            = icon('far','image')
            %input{type: :file, class:"file"}
      .chat-main__message-form__new-message__send-btn
        Send
