.messages
  = render @messages

.chat-main
  .chat-main__header
    .chat-main__header__group
      .groupname
        name
      .username
        member
    .chat-main__header__edit-btn
      = link_to 'Edit', '#' 
  .chat-main__message-list
    .chat-main__message-list__message
      .username
      .date
    .post
  

  .chat-main__message-form
    = form_for [@group, @message] do |f|
      = f.text_field :content, class: 'chat-main__message-form__new-message', placeholder: 'type a message'
      .chat-main__message-form__new-message__input-box
        = f.label :image, class: 'chat-main__message-form__new-message__input-box__image' do
          = icon('fas', 'image', class: 'icon')
          = f.file_field :image, class: 'hidden'
      = f.submit 'Send', class: 'chat-main__message-form__new-message__send-btn'


 
